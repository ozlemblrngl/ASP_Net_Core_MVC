@{
    ViewData["Title"] = "Cookie";
}

<div class="row mb-4">
    <div class="col">
        <h3>@ViewData["Title"]</h3>
    </div>
</div>

<div class="row">
    <div class="col-4">
        @if (ViewData["username"] != null)
        {
            <p>Hoş geldiniz <b class="text-danger">@ViewData["username"]</b> <br /> Lütfen sisteme giriş yaparak ilerleyiniz</p>
        }
       
        <form method="post">
            <div class="form-group">
                <label for="username">User Name</label>
                <input id="username" name="username" type="text" class="form-control" placeholder="özlem belörenoğlu"/>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input id="password" name="password" type="text" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Enter</button>
            @if(ViewData["error"] != null)
            {
                <div class="alert alert-danger mt-3">
                    @ViewData["error"]
                </div>
            }
        </form>
    </div>
</div>



